<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Theme.AppCompat.Light.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88DA26"
    android:transitionGroup="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a2ff5b" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_mais_trinta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right|top"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="370dp"
                android:longClickable="false"
                android:src="@mipmap/ic_mais_trinta"
                app:backgroundTint="#0099ff" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_mais_quinze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right|top"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="290dp"
                android:longClickable="false"
                android:src="@mipmap/ic_mais_quinze"
                app:backgroundTint="#0099ff" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_mais_dez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right|top"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="210dp"
                android:longClickable="false"
                android:src="@mipmap/ic_mais_dez"
                app:backgroundTint="#0099ff" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_mais_cinco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right|top"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="130dp"
                android:longClickable="false"
                android:src="@mipmap/ic_mais_cinco"
                app:backgroundTint="#0099ff" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_mais_um"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right|top"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="50dp"
                android:longClickable="false"
                android:src="@mipmap/ic_mais_um"
                app:backgroundTint="#0099ff" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_menos_trinta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="true"
                android:layout_gravity="left|top"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="370dp"
                android:longClickable="false"
                android:src="@mipmap/ic_menos_trinta"
                app:backgroundTint="#ff003b" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_menos_quinze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="true"
                android:layout_gravity="left|top"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="290dp"
                android:longClickable="false"
                android:src="@mipmap/ic_menos_quinze"
                app:backgroundTint="#ff003b" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_menos_dez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="true"
                android:layout_gravity="left|top"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="210dp"
                android:longClickable="false"
                android:src="@mipmap/ic_menos_dez"
                app:backgroundTint="#ff003b" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_menos_cinco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="true"
                android:layout_gravity="left|top"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="130dp"
                android:longClickable="false"
                android:src="@mipmap/ic_menos_cinco"
                app:backgroundTint="#ff003b" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_menos_um"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="true"
                android:layout_gravity="left|top"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:longClickable="false"
                android:src="@mipmap/ic_menos_um"
                app:backgroundTint="#ff003b" />

            <TextView
                android:id="@+id/txt_prova"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:text="Prova: X"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:textStyle="bold" />


        </FrameLayout>
    </FrameLayout>

    <Spinner
        android:id="@+id/spinner_provas"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:visibility="invisible" />

</FrameLayout>